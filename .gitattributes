*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.py text eol=lf
*.sol text eol=lf
*.rs text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.env text eol=lf

# Shell scripts
*.sh text eol=lf

# Compiled files
*.wasm binary
*.node binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Images
*.png binary
*.jpg binary
*.jpeg binary

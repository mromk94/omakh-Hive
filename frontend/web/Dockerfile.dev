# Development Dockerfile for Frontend

FROM node:20-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache libc6-compat

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source
COPY . .

EXPOSE 3000

# Start in development mode with hot reload
CMD ["npm", "run", "dev"]

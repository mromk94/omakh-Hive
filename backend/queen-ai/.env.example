# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://omk_user:omk_password@localhost:5432/omk_hive

# Redis
REDIS_URL=redis://localhost:6379/0

# Message Bus
MESSAGE_BUS_TYPE=redis
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# LLM Providers (At least one required - Gemini recommended as default)
DEFAULT_LLM_PROVIDER=gemini

# GEMINI (Google AI) - RECOMMENDED DEFAULT
# Get API key: https://makersuite.google.com/app/apikey
# Free tier: 15 requests/min, 1500 requests/day
# Pricing: Flash $0.075/$0.30 per 1M tokens (input/output)
GEMINI_API_KEY=

# OPENAI (GPT-4, GPT-3.5)
# Get API key: https://platform.openai.com/api-keys
# Pricing: GPT-4 $30/$60 per 1M tokens, GPT-3.5 Turbo $0.50/$1.50
OPENAI_API_KEY=

# ANTHROPIC (Claude 3.5 Sonnet)
# Get API key: https://console.anthropic.com/settings/keys
# Pricing: Claude 3.5 Sonnet $3/$15 per 1M tokens
ANTHROPIC_API_KEY=

# X GROK (Optional - currently limited availability)
# Get API key: https://x.ai/api
GROK_API_KEY=

# Google Cloud Platform (Following google_cloud_strategy.md)
# Get $200K startup credits: https://cloud.google.com/startup
GCP_PROJECT_ID=omk-hive-prod
GCP_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# BigQuery (Learning Function - 1TB queries/month free)
BIGQUERY_ENABLED=false
BIGQUERY_DATASET=omk_hive_learning

# Learning Function (Opt-in - for future model training)
LEARNING_FUNCTION_ENABLED=false
LEARNING_BATCH_SIZE=100
LEARNING_RETENTION_DAYS=365

# Secret Manager (Production - use for API keys)
SECRET_MANAGER_ENABLED=false

# Blockchain
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
QUEEN_CONTROLLER_ADDRESS=

# Fetch.ai / ASI
FETCH_NETWORK=testnet
FETCH_MNEMONIC=your_fetch_mnemonic_here

# Security
API_KEY_HEADER=X-API-Key
ADMIN_API_KEYS=your_admin_key_1,your_admin_key_2

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Learning Function
LEARNING_ENABLED=true
LEARNING_STORAGE_BUCKET=omk-hive-learning-data
BIGQUERY_DATASET=omk_hive_learning
